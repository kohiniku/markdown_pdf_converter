# Backend Configuration
DATABASE_URL=sqlite:///./app.db
DEBUG=true
HOST=0.0.0.0
# Ports are centrally managed from the project root `.env` now.
# See BACKEND_INTERNAL_PORT and BACKEND_HOST_PORT in `../.env.example`.
# CORS_ORIGINS=["http://localhost:<FRONTEND_HOST_PORT>"]

# File Storage
UPLOAD_DIR=uploads
OUTPUT_DIR=output
MAX_FILE_SIZE=10485760

# PDF Generation
PDF_ENGINE=weasyprint
PDF_TIMEOUT=30
# PDF page setup defaults
# PDF_PAGE_SIZE_DEFAULT=A4
# PDF_PAGE_ORIENTATION_DEFAULT=portrait
# PDF_PAGE_MARGIN_DEFAULT=12mm
# Treat single newlines as spaces in paragraphs (True/False)
# NEWLINE_AS_SPACE=false
# Base font size (px) applied to PDF and preview when not overridden by request
# PDF_BASE_FONT_SIZE=13

# Proxy (optional)
# If set, these will be applied at startup
# HTTP_PROXY=http://proxy.local:8080
# HTTPS_PROXY=https://secure-proxy.local:8443
# NO_PROXY=localhost,127.0.0.1
# APPLY_PROXY_ON_STARTUP=true

# Target GROWI compatibility (informational)
# GROWI_TARGET_VERSION=7.3.0

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
